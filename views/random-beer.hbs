{{#if beers}}
    {{#each beers}}
        <ul>
            <li><img src="{{this.image_url}}"/></li>
            <li>{{this.food_pairing}}</li>
            <li>{{this.name}}</li>
            <li>{{this.tagline}}</li>
            <li>{{this.description}}</li>
            <li>{{this.brewer_tips}}</li>
        </ul>
    {{/each}}
{{/if}}